    <thead>
        <tr>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Stance</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>{{candidate.last_name}}</td>
            <td>{{candidate.first_name}}</td>
