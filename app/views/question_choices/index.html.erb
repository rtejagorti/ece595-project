<p id="notice"><%= notice %></p>

<h1>Question Choices</h1>

<table>
  <thead>
    <tr>
      <th>Choice</th>
      <th>Voter</th>
      <th>Candidate</th>
      <th>Question</th>
      <th>Choice source url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @question_choices.each do |question_choice| %>
      <tr>
        <td><%= question_choice.choice %></td>
        <td><%= question_choice.voter %></td>
        <td><%= question_choice.candidate %></td>
        <td><%= question_choice.question %></td>
        <td><%= question_choice.choice_source_url %></td>
        <td><%= link_to 'Show', question_choice %></td>
        <td><%= link_to 'Edit', edit_question_choice_path(question_choice) %></td>
        <td><%= link_to 'Destroy', question_choice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Question Choice', new_question_choice_path %>
