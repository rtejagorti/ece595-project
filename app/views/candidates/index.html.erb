<p id="notice"><%= notice %></p>

<h1>Candidates</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Isencumbent</th>
      <th>Biography</th>
      <th>Precinct</th>
      <th>Ballot</th>
      <th>Email</th>
      <th>Pol url</th>
      <th>Pol aff</th>
      <th>Haspicture</th>
      <th>Running for</th>
      <th>Office type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @candidates.each do |candidate| %>
      <tr>
        <td><%= candidate.first_name %></td>
        <td><%= candidate.last_name %></td>
        <td><%= candidate.isEncumbent %></td>
        <td><%= candidate.biography %></td>
        <td><%= candidate.precinct %></td>
        <td><%= candidate.ballot %></td>
        <td><%= candidate.email %></td>
        <td><%= candidate.pol_URL %></td>
        <td><%= candidate.pol_aff %></td>
        <td><%= candidate.hasPicture %></td>
        <td><%= candidate.running_for %></td>
        <td><%= candidate.office_type %></td>
        <td><%= link_to 'Show', candidate %></td>
        <td><%= link_to 'Edit', edit_candidate_path(candidate) %></td>
        <td><%= link_to 'Destroy', candidate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

